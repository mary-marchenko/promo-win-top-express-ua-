$blue: #000055
$magenta: #ff267e
$green: #05C489
$green-hover: #05b37c
$white: #ffffff

$font-suisse-med: 'SuisseIntl-Medium', sans-serif
$font-suisse-semb: 'SuisseIntl-SemiBold', sans-serif
$font-wulkan: 'WulkanDisplay-SemiBoldItalic', sans-serif

body
  background: $blue

.hide
  display: none !important

.fav-page
  width: 100%
  overflow: hidden

.normal
  font-family: $font-suisse-med

.italic
  font-family: $font-wulkan

.date
  margin-top: 37px
  font-size: 29px
  color: $white
  letter-spacing: 0.06em
  border-radius: 5px
  border: 2px solid $white
  display: flex
  flex-direction: column
  text-align: center
  .day
    background: $magenta
    font-family: $font-suisse-med
    padding: 8px 18px 1px
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    border-bottom: 2px solid $white
  .time
    background: $blue
    font-family: $font-suisse-med
    padding: 8px 18px 1px
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px

